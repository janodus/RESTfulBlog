<% include ./partials/header %>

<div class="ui main text container">
  <div class="ui huge header">
    RESTFUL BLOG APP
    <div class="ui top attached segment">
      <div class="ui divided items">
  
        <% blogs.forEach(function(posts){ %>
          <div class="item">
            <div class="image">
              <img src="<%= posts.image %>">
            </div>
          <div class="content">
              <a class="header" href="/blogs/<%= posts._id %>"><%= posts.title %></a>
                <div class="meta">
                  <span><%= posts.created.toDateString() %></span>
                </div>
              <div class="description">
                <p><%- posts.body.substring(0, 40) %> ...</p>
              </div>
              <div class="extra">
                <a class="ui floated basic blue button" href="/blogs/<%= posts._id %>">
                  Read More<i class="right chevron icon small"></i>
                </a>
              </div>
            </div>
          </div>
        <% }) %>
        
      </div>
    </div>
  </div>
</div>

<% include ./partials/footer %>